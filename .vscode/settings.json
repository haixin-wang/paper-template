{
  // LaTeX
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.chktex.enabled": true,
  "latex-workshop.message.badbox.show": false,
  // Grammarly
  "grammarly.domain": "academic",
  // cSpell
  "cSpell.language": "en,en-US",
  "cSpell.languageSettings": [
    {
      "languageId": "latex",
      "ignoreRegExpList": [
        "\\\\\\w+([ %\\{])?"
      ]
    }
  ]
}
